<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">Asaana <button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-wallet">New Wallet</button></h1>
			</div><!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item active"><a href="/app/wallets">Wallets</a></li>
				</ol>
			</div><!-- /.col -->
		</div><!-- /.row -->
	</div><!-- /.container-fluid -->
</div>
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body table-responsive p-0">
						<table class="table table-hover">
							<thead>
								<tr>
									<th>Phone</th>
									<th>Operator</th>
									<th>Status</th>
									<th>Balance</th>
									<th>Comission</th>
									<th>Total</th>
								</tr>
							</thead>
							<tbody>
								{{#each data.wallets}}
								<tr>
									<td>{{msisdn}}</td>
									<td>{{operator}}</td>
									<td>{{walletStatus}}</td>
									<td>{{walletBalance}}</td>
									<td>{{comissionBalance}}</td>
									<td>{{totalBalance}}</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{> "modals/wallet/new"}}